<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<attribute name="class" value="mgs-instant-search-type-page"/>
        <referenceContainer name="content">
            <block class="MGS\InstantSearch\Block\Page\ListPage" name="mgs.instant.search.list.page" template="MGS_InstantSearch::page/list.phtml">
                <block class="MGS\InstantSearch\Block\SearchList\Toolbar" name="page_list_toolbar" template="MGS_InstantSearch::search/list/toolbar.phtml">
                    <block class="Magento\Theme\Block\Html\Pager" name="page_list_toolbar_pager"/>
                </block>
                <action method="setToolbarBlockName">
                    <argument name="name" xsi:type="string">page_list_toolbar</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
