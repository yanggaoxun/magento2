<?php $mpanelHelper = $this->helper('MGS\Mpanel\Helper\Data'); ?>
<?php $themeSettings = $mpanelHelper->getThemeSettings(); ?>
<?php $subCategories = $themeSettings['catalog']['sub_categories'];?>

<?php
