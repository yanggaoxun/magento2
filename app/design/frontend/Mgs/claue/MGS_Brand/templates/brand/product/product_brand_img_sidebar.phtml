<?php if ($block->getConfig('general_settings/enabled')): ?>
    <?php if ($block->getConfig('product_page_settings/show_brand')): ?>
		<?php if ($block->getConfig('product_page_settings/show_brand_img_sidebar')): ?>
			<?php if ($brand = $block->getBrand()): ?>
				<?php
				if ($block->getConfig('product_page_settings/small_image_width') != '') {
					$width = $block->getConfig('product_page_settings/small_image_width');
				} else {
					$width = 240;
				}
				?>
				<div class="block product-brand">
					<?php $img = $brand->getSmallImageUrl(); ?>
					<?php if ($img) { ?>
						<div class="brand-image">
							<a title="<?php echo $brand->getName(); ?>" href="<?php echo $brand->getUrl(); ?>"><img class="image img-responsive" style="max-width: <?php echo $width ?>px;" src="<?php echo $img; ?>" alt="<?php echo $brand->getName(); ?>"/></a>
						</div>
					<?php } ?>
				</div>
			<?php endif; ?>
        <?php endif; ?>
    <?php endif; ?>
<?php endif; ?>
