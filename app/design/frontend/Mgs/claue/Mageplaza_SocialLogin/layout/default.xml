<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="social-login-popup" destination="footer-container" after="-"/>
		
		<referenceBlock name="social-login-popup-authentication">
			<block class="Magento\Framework\View\Element\Template" name="form_additional_info" after="-" template="MGS_GDPR::customer/form/login.phtml" ifconfig="gdpr/general/active"/>
			<block class="MSP\ReCaptcha\Block\Frontend\ReCaptcha" name="login-msp-recaptcha" after="-"
                   template="MSP_ReCaptcha::msp_recaptcha.phtml"
                   ifconfig="msp_securitysuite_recaptcha/frontend/enabled">

                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="msp-recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">MSP_ReCaptcha/js/reCaptcha</item>
                                <item name="zone" xsi:type="string">login</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
		</referenceBlock>
		
		<referenceBlock name="social-login-popup-create">
			<block class="Magento\Framework\View\Element\Template" name="form_additional_info" after="-" template="MGS_GDPR::customer/form/register.phtml" ifconfig="gdpr/general/active"/>
			<block class="MSP\ReCaptcha\Block\Frontend\ReCaptcha" name="create-msp-recaptcha" after="-"
                   template="MSP_ReCaptcha::msp_recaptcha.phtml"
                   ifconfig="msp_securitysuite_recaptcha/frontend/enabled">

                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="msp-recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">MSP_ReCaptcha/js/reCaptcha</item>
                                <item name="zone" xsi:type="string">create</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
		</referenceBlock>
		<referenceBlock name="social-login-popup-forgot">
			<block class="MSP\ReCaptcha\Block\Frontend\ReCaptcha" name="forgot-msp-recaptcha" after="-"
                   template="MSP_ReCaptcha::msp_recaptcha.phtml"
                   ifconfig="msp_securitysuite_recaptcha/frontend/enabled">

                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="msp-recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">MSP_ReCaptcha/js/reCaptcha</item>
                                <item name="zone" xsi:type="string">forgot</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
		</referenceBlock>
    </body>
</page>
